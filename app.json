{
  "expo": {
    "name": "FlickMate",
    "slug": "qr-mobile",
    "version": "1.2.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon-dark.png",
    "userInterfaceStyle": "automatic",
    "scheme": ["flickmate", "pl.dmq.moviepicker"],
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "FlickMate uses your camera to scan QR codes for joining movie games. You can also join manually without camera access."
        }
      ],
      "expo-font",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#000000",
          "image": "./assets/images/icon-light.png",
          "imageWidth": 200
        }
      ],
      "expo-sqlite"
    ],
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "appStoreUrl": "https://apps.apple.com/us/app/flickmate-movie-finder/id6741321848",
      "buildNumber": "20251014",
      "supportsTablet": true,
      "icon": "./assets/images/icon.icon",
      "infoPlist": {
        "NSCameraUsageDescription": "FlickMate uses your camera to scan QR codes for joining movie games. You can also join manually without camera access.",
        "NSCameraUsageDescription_pl": "FlickMate używa aparatu do skanowania kodów QR, aby dołączyć do gier filmowych. Możesz również dołączyć ręcznie bez dostępu do aparatu.",
        "UIViewControllerBasedStatusBarAppearance": true,
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "pl.dmq.movie-picker",
      "associatedDomains": ["applinks:movie.dmqq.dev"]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": ["android.permission.CAMERA"],
      "package": "pl.dmq.moviepicker",
      "versionCode": 20250926,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "flickmate",
              "host": "*"
            },
            {
              "scheme": "https",
              "host": "movie.dmqq.dev",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "ab2d7ea0-e25f-4063-a2e2-1a449547340b"
      }
    },
    "runtimeVersion": "2.0.0",
    "updates": {
      "url": "https://movie.dmqq.dev/api/manifest",
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    }
  }
}
